# Slack Bot Token (xoxb-...)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Slack App-Level Token for Socket Mode (xapp-...)
SLACK_APP_TOKEN=xapp-your-app-token

# Comma-separated list of Slack channel IDs to watch
SLACK_CHANNEL_IDS=C01ABCDEF,C02GHIJKL

# Port for the REST API (default: 3100)
API_PORT=3100

# Path to SQLite database file (default: ./amplification.db)
DB_PATH=./amplification.db
